<%- include('header') %>

<!-- 导航栏-->
<nav>
    <div class="navbar">
      <div class="inner_bar">
        <a class="curent" href="/search">搜索资讯<i></i></a>
        <a  href="/upload">上传资讯<i></i></a>
        <a  href="/search_reports">报告搜索<i></i></a>
      </div>
    </div>
</nav>

<!-- 搜索栏 -->
<div style="margin-top:30px;text-align:center;">
    <span id="search_span">
        <input type="text" id="result_search_input"  name="search"  value="<%= data.search %>" >          
    </span>
    
    <span id="search_button_span">
      <input type="submit"  id="result_search_button" value="搜 索" >
    </span>
</div>
<!-- 搜索结果数栏 -->
<div id="result_count">
    耗时
    <%= data.body.took%>
    毫秒广发资管为您找到相关结果约
    <%= data.body.hits.total%>
    个
</div>
<div class="container">
    <% data.body.hits.hits.forEach(function(element){ %>
        <div style="text-align:left;margin-top:20px;">
            <h1 style="text-align:left;padding-left:81px;padding-right:10%;" > 
                <%if (element.highlight.title == undefined) { %>
                    <a href="/news/<%=element._id%>"><%=element._source.title%></a>
                  <% } else { %>
                  <a href="/news/<%=+element._id%>"><%-element.highlight.title[0]%></a>
                  <% } %>
            </h1><br/>

            <div style="text-align:left;padding-left:81px;padding-right:10%;">
                <%if (element.highlight.content == undefined && element.highlight.attachment_content == undefined) { %>
                  <a href=<%="/news/"+element._id%>><%=(element._source.content+element._source.attachment_content).substring(0,500)%></a>
                <% } else if(element.highlight.attachment_content == undefined){ %>
                <a href=<%="/news/"+element._id%>>
                    <% element.highlight.content.forEach(function(h){ %>
                    <%-h%>......
                    <% }); %>
                </a>
                <%} else if (element.highlight.content == undefined) { %>
                <a href=<%="/news/"+element._id%>><%-(element.highlight.attachment[0]).substring(0,500)%></a>
                <% } %>
            </div>
    <% }); %>
</div><br/>
<%- include('footer')%>